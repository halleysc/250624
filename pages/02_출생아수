import streamlit as st
import pandas as pd
import os
import re

st.set_page_config(page_title="0ì„¸ ì¸êµ¬ ìƒìœ„ ë™ ë¶„ì„", layout="wide")

st.title("2025ë…„ 5ì›” 0ì„¸ ì¸êµ¬ ê¸°ì¤€ ì—°ë ¹ë³„ ì¸êµ¬ ë¶„ì„")
st.write("0ì„¸ ì¸êµ¬ê°€ ë§ì€ ìƒìœ„ 5ê°œ ë™ì˜ ì „ì²´ ì—°ë ¹ë³„ ì¸êµ¬ë¥¼ ì„  ê·¸ë˜í”„ë¡œ ì‹œê°í™”í•©ë‹ˆë‹¤.")

# ê¸°ë³¸ íŒŒì¼ ê²½ë¡œ
default_file_path = "/mnt/data/202505_202505_ì—°ë ¹ë³„ì¸êµ¬í˜„í™©_ì›”ê°„.csv"

# íŒŒì¼ ì—…ë¡œë“œ ë°›ê¸°
uploaded_file = st.file_uploader("ğŸ“ CSV íŒŒì¼ ì—…ë¡œë“œ (ì„ íƒ ì‚¬í•­)", type="csv")

# ì‚¬ìš©í•  íŒŒì¼ ê²°ì •
if uploaded_file is not None:
    st.success("âœ… ì—…ë¡œë“œëœ íŒŒì¼ì´ ì‚¬ìš©ë©ë‹ˆë‹¤.")
    file_to_use = uploaded_file
elif os.path.exists(default_file_path):
    st.info("â„¹ï¸ ì—…ë¡œë“œëœ íŒŒì¼ì´ ì—†ìœ¼ë¯€ë¡œ ê¸°ë³¸ íŒŒì¼ì„ ì‚¬ìš©í•©ë‹ˆë‹¤.")
    file_to_use = default_file_path
else:
    st.error("âŒ ì‚¬ìš©í•  ìˆ˜ ìˆëŠ” CSV íŒŒì¼ì´ ì—†ìŠµë‹ˆë‹¤.")
    st.stop()

# ë°ì´í„° ì½ê¸°
df = pd.read_csv(file_to_use, encoding="euc-kr")

# ì£¼ìš” ì—´
admin_col = "í–‰ì •êµ¬ì—­"
age_prefix = "2025ë…„05ì›”_ê³„_"
age_cols = [col for col in df.columns if col.startswith(age_prefix) and ("ì„¸" in col or "100ì„¸ ì´ìƒ" in col)]
age_col_0 = f"{age_prefix}0ì„¸"

# ì‰¼í‘œ ì œê±° í›„ ì •ìˆ˜ ë³€í™˜
for col in age_cols:
    df[col] = df[col].astype(str).str.replace(",", "").astype(int)

# í–‰ì •êµ¬ì—­ì—ì„œ 'ì„œìš¸íŠ¹ë³„ì‹œ ã…‡ã…‡êµ¬' ì œê±° â†’ ë™ ì´ë¦„ë§Œ ë‚¨ê¸°ê¸°
df[admin_col] = df[admin_col].apply(lambda x: re.sub(r'^ì„œìš¸íŠ¹ë³„ì‹œ\s+\S+\s+', '', x).strip())

# 0ì„¸ ì¸êµ¬ê°€ ë§ì€ ìƒìœ„ 5ê°œ ë™ ì¶”ì¶œ
top5_df = df.sort_values(by=age_col_0, ascending=False).head(5)

# ì—°ë ¹ ë¼ë²¨ ì •ë¦¬
age_labels = [col.replace(age_prefix, "") for col in age_cols]

# ì‹œê°í™”ìš© ë°ì´í„° êµ¬ì„±
plot_df = top5_df[[admin_col] + age_cols].copy()
plot_df.columns = [admin_col] + age_labels
plot_df = plot_df.set_index(admin_col).T
plot_df.index.name = "ì—°ë ¹"

# ğŸ“Š ê·¸ë˜í”„ ì¶œë ¥
st.subheader("ğŸ“Š ì—°ë ¹ë³„ ì¸êµ¬ ì„  ê·¸ë˜í”„ (0ì„¸ ì¸êµ¬ ê¸°ì¤€ ìƒìœ„ 5ê°œ ë™)")
st.line_chart(plot_df)

# ğŸ“„ ì›ë³¸ ë°ì´í„° ì¼ë¶€ í‘œì‹œ
st.subheader("ğŸ§¾ ì›ë³¸ ë°ì´í„° ë¯¸ë¦¬ë³´ê¸°")
st.dataframe(df[[admin_col, age_col_0] + age_cols[:5]])
